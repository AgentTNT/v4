{% extends 'base.html.twig' %}

{% block title %}{% trans %}Welcome to{% endtrans %} eFa -- {% trans %}Hostname{% endtrans %}{% endblock %}

{% block body %}
    <div class="initbody">
        <div class="init">
            <div class="center">
                    <img src="{{ asset('images/logo.png') }}" alt="eFa Logo" />
            </div>
            <h1>{% trans %}Hostname{% endtrans %}</h1>
            <div class="inner-container">
                <form name="hostnameform" class="initform" method="post" action="/{{ app.request.locale }}">
                    <h2>
                        <label for="hostname">{% trans %}Please enter a hostname{% endtrans %}</label>
                    </h2>
                    <div>
                        <input type="text" name="hostname" maxlength=256 autofocus />
                    </div>
                    <button type="submit" name="back" value="back">{% trans %}Back{% endtrans %}</button>
                    <button type="submit" name="next" value="next">{% trans %}Next{% endtrans %}</button>
                </form> 
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
{% endblock %}
