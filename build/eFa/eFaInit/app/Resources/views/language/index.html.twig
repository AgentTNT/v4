{% extends 'base.html.twig' %}

{% block title %}{% trans %}Welcome to{% endtrans %} eFa{% endblock %}

{% block body %}
    <div class="initbody">
        <div class="init">
            <div class="center">
                    <img src="{{ asset('images/logo.png') }}" alt="eFa Logo" />
            </div>
            <h1>{% trans %}Welcome to{% endtrans %} eFa</h1>
            <div class="inner-container">
                <form name="languageform" class="initform" method="post" action="/{{ app.request.locale }}">
                    <h2>
                        <label for="language">{% trans %}Language{% endtrans %}</label>
                    </h2>
                    <div>
                        <select onchange="window.location.replace(this.value)" autofocus>
                            <option value="en" {% if app.request.locale == 'en' %}selected{% endif %}>English</option>
                            <option value="fr" {% if app.request.locale == 'fr' %}selected{% endif %}>Fran√ßais</option>
                        </select>
                    </div>
                    <button type="submit" name="next" value="next">{% trans %}Next{% endtrans %}</button>
                </form> 
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
{% endblock %}
